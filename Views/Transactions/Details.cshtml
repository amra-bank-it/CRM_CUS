@model CRM_CUS.Models.Transaction

@{
    ViewData["Title"] = "Подробно";
}

<h1>Подробно</h1>

<div>
    <h4>Транзакции</h4>
    <hr />
       <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Время сервера")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServerTime)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayName("Сумма")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayName("Валюта")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Currency.DescriptionRu)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayName("Клиент")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.FullName)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayName("Описание")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransactionType.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернуться</a>
</div>
