@model CRM_CUS.Models.Transaction

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены что хотите удалить?</h3>
<div>
    <h4>Транзации</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Время сервера")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServerTime)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayName("Сумма")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayName("Валюта")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Currency.DescriptionRu)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayName("Клиент")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.FullName)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayName("Описание")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransactionType.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
