@model IEnumerable<CRM_CUS.Models.Phone>

@{
    ViewData["Title"] = "Телефоны";
}

<h1>Телефоны</h1>

<p>
    <a asp-action="Create">Создать</a>
                <div class="searchbox">        
        <form class="form-wrapper" method="post" asp-area="" asp-controller="Phones" asp-action="Find">
                <input type="search" name="filterPhones" placeholder="Поиск по ФИО номеру и коду">
                <input type="submit" value="Найти">
        </form>
</div>
</p>
<table class="table" style="color: #ffff">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Страна")
            </th>
            <th>
                @Html.DisplayName("Форматированный телефон")
            </th>
            <th>
                @Html.DisplayName("Код страны")
            </th>
            <th>
                @Html.DisplayName("Номер телефона")
            </th>
            <th>
                @Html.DisplayName("ФИО")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountryOfOrigin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробно</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
