@model CRM_CUS.Models.Phone

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены что хотите удалить?</h3>
<div>
    <h4>Телефон</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Страна")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountryOfOrigin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Форматированный телефон")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormattedPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Код страны")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodeNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Номер телефона")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Клиент")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
