@model CRM_CUS.Models.ChannelDeposit

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>вы уверены что хотите удалить?</h3>
<div>
    <h4>Каналы(Пополнение)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Имя")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChannelName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Группа")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Тип перевода RU")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescriptionRu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Тип перевода EN")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescriptionEn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Каналы(Лимиты)")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChannelLimit.DescriptionRu)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
