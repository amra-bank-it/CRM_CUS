@model CRM_CUS.Models.Passport

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить?</h3>
<div>
    <h4>Паспорт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Серия")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayNameFor(model => model.Serial)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Номер")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Дата выдачи")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Кем выдан")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdWhom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Код подразделения")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdWhomCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Клиент")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Тип паспорта")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeDocument.DescriptionRu)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
